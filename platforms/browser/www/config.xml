<?xml version='1.0' encoding='utf-8'?>
<widget id="com.josephmalafronte.barcrawl" version="1.2.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BarCrawl</name>
    <description>
        BarCrawl is an app for finding local bar deals and connecting with friends!
    </description>
    <author email="jgmalafronte@gmail.com" href="http://cordova.io">
        Joseph Malafronte
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <preference name="StatusBarStyle" value="lightcontent" />
</widget>
